<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC 
    "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="advertiserAccount.companyName">
        <field-validator type="requiredstring" short-circuit="true">
            <param name="trim">true</param>
              <message key="buzzads.advertiser.verify.companyName.empty"></message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">  
           <param name="maxLength">50</param>
           <message key="buzzads.advertiser.companyName.length"></message>  
        </field-validator>
        <field-validator type="regex">
            <param name="expression"><![CDATA[(^[0-9A-Za-z_ \u0100-\uFFFF\.\,\;\-\(\)\&\#]+$)]]></param>
            <message key="buzzads.advertiser.companyName.error.message"></message>  
        </field-validator> 
    </field>
    
